#

PYTHON='python3.2'
HNROOT='/usr/lib/python3.2/site-packages/HyperNova-0.1.0-py3.2.egg/hypernova'

[ -z "$BINDIR"  ] && BINDIR="/usr/bin"
[ -z "$CONFDIR" ] && CONFDIR="/etc/hypernova"

"$BINDIR/$PYTHON" "$HNROOT/agent/__init__.py" "$CONFDIR"
